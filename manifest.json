{
    "manifest_version": 3,
    "name": "WeSay",
    "version": "1.0",
    "description": "Drag text to change text in native English style.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "backend.js"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128":"icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  